@using LocadoraDeVeiculos.Dominio.ModuloPlanoDeCobranca
@using LocadoraDeVeiculos.WebApp.Models
@model DetalhesFuncionarioViewModel

<div class="container my-4">
    <div class="row">
        <div class="col-md-7">
            <dl class="row">
                <dt class="col-sm-4">Nome:</dt>
                <dd class="col-sm-7">@Model.Nome</dd>

                <dt class="col-sm-4">Data de Admissão:</dt>
                <dd class="col-sm-7">@Model.DataAdmissao.ToShortDateString()</dd>

                <dt class="col-sm-4">Salário:</dt>
                <dd class="col-sm-7">@Model.Salario</dd>

                <dt class="col-sm-4">Login:</dt>
                <dd class="col-sm-7">@Model.Nome!.Replace(" ", "")</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-7">@Model.Email</dd>
            </dl>
        </div>
    </div>
</div>
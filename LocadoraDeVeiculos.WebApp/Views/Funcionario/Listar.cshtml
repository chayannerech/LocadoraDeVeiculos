@using LocadoraDeVeiculos.WebApp.Models
@model IEnumerable<ListarFuncionarioViewModel>

@{
    ViewBag.Title = "Funcionários Cadastrados";
}

<div class="col">
    <a class="btn btn-outline-secondary px-4 mt-2" href="/funcionario/inserir">
        <i class="bi bi-plus-circle"></i>
        Inserir novo registro
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (var FuncionarioVm in Model)
        {
            <div class="card col-lg-3 col-xl-3">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center pe-1">
                    <h6 class="m-0">Id: @FuncionarioVm.Id</h6>

                    <div class="text-end d-flex align-items-center gap-2">
                        <a
                            title="Detalhes"
                            class="text-secondary fs-6"
                            href="/Funcionario/detalhes/@FuncionarioVm.Id">
                            <i class="bi bi-search"></i>
                        </a>
                        <a
                            title="Editar"
                            class="text-secondary fs-6"
                            href="/Funcionario/editar/@FuncionarioVm.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a
                            title="Excluir"
                            class="text-danger fs-6" href="/Funcionario/excluir/@FuncionarioVm.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body d-grid gap-1">
                    <h5 class="card-title">@FuncionarioVm.Nome</h5>
                    <p>Login: @FuncionarioVm.Login</p>
                </div>
            </div>
        }
    </div>
</div>
@using LocadoraDeVeiculos.Dominio.ModuloPlanoDeCobranca
@using LocadoraDeVeiculos.WebApp.Models
@model DetalhesConfiguracaoViewModel
@{
    ViewBag.Title = "Preço dos combustíveis";
}

@if(Model is null){
    <div class="text-center">
        <h4 class="text-secondary fw-bold mt-4">Sem configurações</h4>
        <p class="fs-6 mt-2">Os preços ainda não estão configurados</p>
        <a class="btn btn-outline-secondary px-4 mt-4" href="/Configuracao/inserir">
            <i class="bi bi-gear me-2"></i>
            Configurar
        </a>
    </div>
}
else
{
    <div class="container mt-4 ms-3">
        <div class="row">
            <div class="col-md-7">
                <dl class="row">
                    <dt class="col-sm-4">Gasolina:</dt>
                    <dd class="col-sm-7">@Model.Gasolina R$/L</dd>

                    <dt class="col-sm-4">Gás Natural (GNV):</dt>
                    <dd class="col-sm-7">@Model.GNV R$/L</dd>

                    <dt class="col-sm-4">Diesel:</dt>
                    <dd class="col-sm-7">@Model.Diesel R$/L</dd>

                    <dt class="col-sm-4">Etanol:</dt>
                    <dd class="col-sm-7">@Model.Etanol R$/L</dd>
                </dl>
            </div>
        </div>
        <a class="btn btn-outline-secondary px-4 mt-3" href="/Configuracao/editar">
            <i class="bi bi-gear me-2"></i>
            Editar
        </a>
    </div>
}
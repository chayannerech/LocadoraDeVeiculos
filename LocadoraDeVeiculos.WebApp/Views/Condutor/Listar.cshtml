@using LocadoraDeVeiculos.WebApp.Models
@model IEnumerable<ListarCondutorViewModel>

@{
    ViewBag.Title = "Condutores Cadastrados";
}

<div class="col">
    <a class="btn btn-outline-secondary px-4 mt-2" href="/Condutor/inserir">
        <i class="bi bi-plus-circle"></i>
        Inserir novo registro
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (var CondutorVm in Model)
        {
            <div class="card col-lg-4 col-xl-3">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h6 class="m-0">Id: @CondutorVm.Id</h6>

                    <div class="text-end d-flex align-items-center gap-2">
                        <a
                            title="Detalhes"
                            class="text-secondary fs-6"
                            href="/Condutor/detalhes/@CondutorVm.Id">
                            <i class="bi bi-search"></i>
                        </a>
                        <a
                            title="Editar"
                            class="text-secondary fs-6"
                            href="/Condutor/editar/@CondutorVm.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a
                            title="Excluir"
                            class="text-danger fs-6" href="/Condutor/excluir/@CondutorVm.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body d-grid">
                    <h5 class="card-title">@CondutorVm.Nome</h5>
                    <p class="card-subtitle">Cliente: @CondutorVm.NomeCliente</p>
                    <p class="card-subtitle">CPF: @CondutorVm.CPF</p>
                    <p class="card-subtitle">CNH: @CondutorVm.CNH</p>
                    <p class="card-subtitle">Validade: @CondutorVm.ValidadeCNH.ToString("MM/yyyy")</p>
                </div>
            </div>
        }
    </div>
</div>
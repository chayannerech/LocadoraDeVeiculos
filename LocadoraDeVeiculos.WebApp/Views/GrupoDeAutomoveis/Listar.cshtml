@using LocadoraDeVeiculos.WebApp.Models
@model IEnumerable<ListarGrupoDeAutomoveisViewModel>

@{
    ViewBag.Title = "Grupos de Automóveis Disponíveis";
}

<div class="col">
    <a class="btn btn-outline-secondary px-4 mt-2" href="/GrupoDeAutomoveis/inserir">
        <i class="bi bi-plus-circle"></i>
        Inserir novo registro
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (var GrupoDeAutomoveisVm in Model)
        {
            <div class="card col-lg-3 col-xl-2">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h6 class="m-0">Id: @GrupoDeAutomoveisVm.Id</h6>

                    <div class="text-end d-flex align-items-center gap-2">
                        <a
                            title="Detalhes"
                            class="text-secondary fs-6"
                            href="/GrupoDeAutomoveis/detalhes/@GrupoDeAutomoveisVm.Id">
                            <i class="bi bi-search"></i>
                        </a>

                        @if (User.Identity!.IsAuthenticated)
                        {
                            <a title="Editar"
                               class="text-secondary fs-6"
                               href="/GrupoDeAutomoveis/editar/@GrupoDeAutomoveisVm.Id">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a title="Excluir"
                               class="text-danger fs-6" href="/GrupoDeAutomoveis/excluir/@GrupoDeAutomoveisVm.Id">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body d-grid">
                    <h5 class="card-title">@GrupoDeAutomoveisVm.Nome</h5>
                </div>
            </div>
        }
    </div>
</div>
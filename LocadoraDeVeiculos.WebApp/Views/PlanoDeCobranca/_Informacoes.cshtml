@using LocadoraDeVeiculos.WebApp.Models
@model DetalhesPlanoDeCobrancaViewModel

<div class="container my-4">
    <div class="row">
        <div class="col-md-7">
            <dl class="row">
                <dt class="col-sm-4">Grupo de Automóveis:</dt>
                <dd class="col-sm-6 text-start">@Model.GrupoNome</dd>

                <div class="col-12">
                    <h5 class="text-secondary mt-4">Plano Diário</h5>
                    <hr class="mt-1 mb-3" />
                </div>
                <dt class="col-sm-5">Preço da diária:</dt>
                <dd class="col-sm-7">@Model.PrecoDiaria R$</dd>

                <dt class="col-sm-5">Preço por quilômetro:</dt>
                <dd class="col-sm-7">@Model.PrecoKm R$/Km</dd>

                <div class="col-12">
                    <h5 class="text-secondary mt-4">Plano Controlado</h5>
                    <hr class="mt-1 mb-3" />
                </div>
                <dt class="col-sm-5">Quilometragem disponível:</dt>
                <dd class="col-sm-7">@Model.KmDisponivel Km</dd>

                <dt class="col-sm-5">Preço da diária:</dt>
                <dd class="col-sm-7">@Model.PrecoDiariaControlada R$</dd>

                <dt class="col-sm-5">Preço por quilômetro extrapolado:</dt>
                <dd class="col-sm-7">@Model.PrecoExtrapolado R$/Km</dd>

                <!-- Plano Livre -->
                <div class="col-12">
                    <h5 class="text-secondary mt-4">Plano Livre</h5>
                    <hr class="mt-1 mb-3" />
                </div>
                <dt class="col-sm-5">Preço:</dt>
                <dd class="col-sm-7">@Model.PrecoLivre R$</dd>
            </dl>
        </div>
    </div>
</div>
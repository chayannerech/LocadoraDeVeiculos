@using LocadoraDeVeiculos.WebApp.Models
@model DetalhesVeiculosViewModel

<div class="container my-4">
    <div class="row">
        <div class="col-md-7">
            <dl class="row">
                <dt class="col-sm-5">Placa:</dt>
                <dd class="col-sm-7">@Model.Placa</dd>

                <dt class="col-sm-5">Marca:</dt>
                <dd class="col-sm-7">@Model.Marca</dd>

                <dt class="col-sm-5">Cor:</dt>
                <dd class="col-sm-7">@Model.Cor</dd>

                <dt class="col-sm-5">Modelo:</dt>
                <dd class="col-sm-7">@Model.Modelo</dd>

                <dt class="col-sm-5">Tipo de Combustível:</dt>
                <dd class="col-sm-7">@Model.TipoCombustivel</dd>

                <dt class="col-sm-5">Capacidade de Combustível:</dt>
                <dd class="col-sm-7">@Model.CapacidadeCombustivel litros</dd>

                <dt class="col-sm-5">Ano:</dt>
                <dd class="col-sm-7">@Model.Ano</dd>

                <dt class="col-sm-5">Grupo de Automóveis:</dt>
                <dd class="col-sm-7">@Model.GrupoNome</dd>
            </dl>
        </div>

        <div class="col-md-4">
            @if (Model.ImagemEmBytes != null && Model.TipoDaImagem != null)
            {
                <img src="data:@Model.TipoDaImagem;base64,@Convert.ToBase64String(Model.ImagemEmBytes)" 
                     alt="Foto do veículo" 
                     class="img-fluid" 
                     style="max-width:80%; height:auto;" />
            }
            else
            {
                <p>Imagem não disponível.</p>
            }
        </div>
    </div>
</div>
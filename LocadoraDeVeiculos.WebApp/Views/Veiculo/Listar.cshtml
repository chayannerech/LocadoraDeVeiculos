@using LocadoraDeVeiculos.WebApp.Models
@model IEnumerable<AgrupamentoVeiculosPorGrupoViewModel>


@{
    ViewBag.Title = "Veículos Disponíveis";
    var inserir = ViewBag.Inserir is null ? true : false;
}

<style>
    .card-body {
        padding: 0.6rem 1rem;
    }

    hr {
        margin: 0.8rem 0;
    }
</style>

<div class="col">
    @if (inserir)
    {
        <a class="btn btn-outline-secondary px-4 mt-2" href="/Veiculo/inserir">
            <i class="bi bi-plus-circle"></i>
            Inserir novo registro
        </a>
    }

    <partial name="_Agrupar" model="Model"></partial>
</div>
@using LocadoraDeVeiculos.WebApp.Models
@model RegistrarViewModel

@{
    ViewBag.Title = "Registro de Usuario";
}

<div class="row">
    <div class="col-lg-6">
        <form class="d-grid gap-3" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Usuario"></label>
                <input asp-for="Usuario" class="form-control" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmarSenha"></label>
                <input asp-for="ConfirmarSenha" class="form-control" />
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-center gap-3 mt-3 mb-5">
                <button type="submit" class="btn btn-secondary px-5" style="width: 170px">Registrar</button>

                <a class="btn btn-outline-secondary" style="width: 170px" href="/">
                    <i class="bi bi-arrow-return-left me-1"></i>
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>
@using LocadoraDeVeiculos.WebApp.Models
@model IEnumerable<ListarClienteViewModel>

@{
    ViewBag.Title = "Clientes Cadastrados";
}

<div class="col">
    <a class="btn btn-outline-secondary px-4 mt-2" href="/Cliente/inserir">
        <i class="bi bi-plus-circle"></i>
        Inserir novo registro
    </a>

    <div class="row gap-2 my-3 my-xl-5">
        @foreach (var ClienteVm in Model)
        {
            var tipoCliente = ClienteVm.PessoaFisica ? "Pessoa física" : "Pessoa jurídica";
            var documento = ClienteVm.PessoaFisica ? "CPF" : "CNPJ";

            <div class="card col-lg-4 col-xl-3">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h6 class="m-0">Id: @ClienteVm.Id</h6>

                    <div class="text-end d-flex align-items-center gap-2">
                        <a
                            title="Detalhes"
                            class="text-secondary fs-6"
                            href="/Cliente/detalhes/@ClienteVm.Id">
                            <i class="bi bi-search"></i>
                        </a>
                        <a
                            title="Editar"
                            class="text-secondary fs-6"
                            href="/Cliente/editar/@ClienteVm.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a
                            title="Excluir"
                            class="text-danger fs-6" href="/Cliente/excluir/@ClienteVm.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body d-grid gap-1">
                    <h5 class="card-title">@ClienteVm.Nome</h5>
                    <p class="card-subtitle">Telefone: @ClienteVm.Telefone</p>
                    <p class="card-subtitle">@tipoCliente</p>
                    <p class="card-subtitle">@documento: @ClienteVm.Documento</p>
                </div>
            </div>
        }
    </div>
</div>
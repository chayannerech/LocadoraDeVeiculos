@using LocadoraDeVeiculos.WebApp.Models
@model IEnumerable<ListarTaxaViewModel>

@{
    ViewBag.Title = "Taxas e Serviços";
    var inserir = ViewBag.Inserir is null ? true : false;
}

<div class="col">
    @if (inserir)
    {
        <a class="btn btn-outline-secondary px-4 mt-2" href="/Taxa/inserir">
            <i class="bi bi-plus-circle"></i>
            Inserir novo registro
        </a>
    }
    <div class="row gap-2 my-3 my-xl-5">
        @foreach (var TaxaVm in Model)
        {
            <div class="card col-lg-3 col-xl-2">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h6 class="m-0">Id: @TaxaVm.Id</h6>

                    <div class="text-end d-flex align-items-center gap-2">
                        <a
                            title="Detalhes"
                            class="text-secondary fs-6"
                            href="/Taxa/detalhes/@TaxaVm.Id">
                            <i class="bi bi-search"></i>
                        </a>
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <a
                            title="Editar"
                            class="text-secondary fs-6"
                            href="/Taxa/editar/@TaxaVm.Id">
                                <i class="bi bi-pencil-fill"></i>
                            </a>
                            <a
                            title="Excluir"
                            class="text-danger fs-6" href="/Taxa/excluir/@TaxaVm.Id">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body d-grid">
                    <h6 class="card-title">@TaxaVm.Nome</h6>
                    <p class="card-subtitle">Valor: @TaxaVm.Preco R$</p>
                </div>
            </div>
        }
    </div>
</div>
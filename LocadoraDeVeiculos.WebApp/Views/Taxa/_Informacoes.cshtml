@using LocadoraDeVeiculos.Dominio.ModuloPlanoDeCobranca
@using LocadoraDeVeiculos.WebApp.Models
@model DetalhesTaxaViewModel

@{
    var metodoCobranca = Model.PrecoFixo ? "Cobrança fixa" : "Cobrança diária";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-7">
            <dl class="row">
                <dt class="col-sm-4">Taxa ou Serviço:</dt>
                <dd class="col-sm-6">@Model.Nome</dd>

                <dt class="col-sm-4">Valor:</dt>
                <dd class="col-sm-6">@Model.Preco R$</dd>

                <dt class="col-sm-4">Método:</dt>
                <dd class="col-sm-6">@metodoCobranca</dd>
            </dl>
        </div>
    </div>
</div>